<iv:Window x:Class="wpf_window_ex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_window_ex"
        xmlns:iv="clr-namespace:IVSoftware"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <iv:Console 
            x:Name="Console" 
            Margin="10"
            TextWrapping="Wrap" 
            AcceptsReturn="True" AcceptsTab="True" MinLines="100" BorderThickness="1" Padding="5"/>
    </Grid>
</iv:Window>
